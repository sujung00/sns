<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sns.post.dao.PostMapper">

	<select id="selectPostList" resultType="com.sns.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			, #{content}
			, #{imagePath}
			, NOW()
			, NOW()
		)
	</insert>
	
	<select id="selectPostListByUserId" parameterType="int" resultType="com.sns.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	
	<select id="selectPostCountByUserId" parameterType="int" resultType="int">
		SELECT
			COUNT(1)
		FROM
			`post`
		WHERE
			`userId` = #{userId}
	</select>

</mapper>